{{!-- Cover --}}
<section class='flex-center-vertical cover {{#if @blog.cover}} cover--yes' style='background-image: url({{@blog.cover}}){{else}}cover--no{{/if}}'>
    <div class='container-cover wrap-center'>

        {{!-- Cover title --}}
        <h1 class='cover__title'>
            {{@blog.title}}
        </h1>

        {{!-- Cover description --}}
        <p class='cover__description'>
            {{@blog.description}}
        </p>
        
        {{!-- Arrow-down (icon) --}}
        <a href='#main' class='cover__icon icon-arrow-down'></a>

    </div>
</section>