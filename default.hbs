    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
    <script type='application/javascript' src='{{asset "js/index.js"}}'></script>
    
    {{ghost_foot}}

</body>
</html>
