ul[class*='list'],
ol[class*='list']
    list-style none
    margin 0
    padding 0
    
.font-titillium
    font-family $font-titillium
    
.font-lato
    font-family $font-lato
    
div[class*='flex-'],
section[class*='flex-'],
article[class*='flex-']
    display flex

div[class*='between'],
section[class*='between'],
article[class*='between']
    justify-content space-between
    
div[class*='around'],
section[class*='around'],
article[class*='around']
    justify-content space-around
    
div[class*='center-horizontal'],
section[class*='center-horizontal'],
article[class*='center-horizontal']
    justify-content center
    
div[class*='center-vertical'],
section[class*='center-vertical'],
article[class*='center-vertical']
    align-items center
    
.video
    height 0
    overflow hidden
    padding-bottom 56.25%
    padding-top 30px
    position relative
    margin 1.5rem 0
    
    iframe
    object
    embed
    video
        height 100%
        left 0
        position absolute
        top 0
        width 100%
    
@media $mq-tablet-md
    .wrap-center
        margin 0 auto
        max-width 680px
        
@media $mq-desktop-xs
    .wrap-center
        max-width 800px
        
@media $mq-desktop-sm
    .wrap-center
        max-width 750px