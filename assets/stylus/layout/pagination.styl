.pagination
    text-align center
    padding 1rem 0
    
    .pagination__prev,
    .pagination__next
        color $color-gray-A
        font-size 2rem
        
    .pagination__number
        color $color-gray-A
        vertical-align top
        margin 0.5rem
        display inline-block
        
        .pagination__page
            vertical-align top
            color $color-gray-B