.cover
    height 100vh
    color $color-light
    z-index 4
    
    .cover__title
        font-size 2.5rem
        padding 0 2rem
        
    .cover__description
        text-transform uppercase
        font-weight 300
        font-size 0.9rem
        line-height 1.3rem
        margin 0 0 4rem 0 
        padding 0 2rem
        
    .cover__icon
        color $color-light
        display block
        text-align center
        font-size 2rem
        
.cover--no
    background-color $color-dark
    
.cover--yes
    background-size cover
    position relative
    
    &:before
        content ''
        background-color rgba($color-dark,0.8)
        position absolute
        width 100vw
        height 100vh
        z-index -1
        
@media $mq-phone-md
    .cover
        .cover__title
            font-size 3.5rem
            margin 0 0 1.5rem 0
            
        .cover__icon
            font-size 2.5rem
            
@media $mq-phone-lg
    .cover
        .cover__description
            font-size 1rem