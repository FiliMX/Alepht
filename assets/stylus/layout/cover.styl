.cover
    height 100vh
    color $color-light
    z-index 4
    
    .cover__title
        font-size 2.5rem
        padding 0 0 0 2rem
        
    .cover__description
        text-transform uppercase
        font-weight 300
        font-size 0.9rem
        line-height 1.3rem
        margin 0 0 4rem 0 
        padding 0 2rem
        
    .cover__icon
        color $color-light
        display block
        text-align center
        font-size 2rem
        
.cover--no
    background-color $color-dark
    
.cover--yes
    background-size cover
    position relative
    
    &:before
        content ''
        background-color rgba($color-dark,0.8)
        position absolute
        width 100vw
        height 100vh
        z-index -1
        
.cover-author
    .cover-author__header
        .cover-author__title
        .cover-author__post
            padding 0 0 0 1.5rem
            
        .cover-author__title
            font-size 2rem
            margin 0 0 0.5rem 0
            
        .cover-author__post
            .cover-author__icon
                font-size 1.1rem
                margin 0 0.2rem 0 0
                
            .cover-author__text
                vertical-align 11%
                
    .cover-author__bio
        .cover-author__description
            padding 0 1.5rem
            font-weight 300
            font-size 0.9rem
                
    .cover-author__footer
        
        .cover-author__location
        .cover-author__website
        .cover-author__facebook
        .cover-author__twitter
            padding 0 0 0 1.5rem
            display block
            margin 0 0 0.5rem 0
            
            .cover-author__icon
                font-size 1.1rem
                margin 0 0.2rem 0 0
                
            .cover-author__text
                vertical-align 11%
                
            .cover-author__link
                color $color-blue-B
                vertical-align 11%
                display inline-block
                padding 0 0 0.1rem 0
                border-bottom 1px dashed $color-blue-B
                
        .cover-author__website
            margin 0 0 1.5rem 0
            
        .cover-author__twitter
            margin 0 0 2.5rem 0
            
@media $mq-phone-md
    .cover
        .cover__title
            font-size 3.5rem
            margin 0 0 1.5rem 0
            
        .cover__icon
            font-size 2.5rem
            
    .cover-author
        .cover-author__header
            .cover-author__title
                font-size 2.5rem
                margin 0 0 0.2rem 0
                
            .cover-author__post
                margin 0 0 1.5rem 0
                display inline-block
                
        .cover-author__bio
            .cover-author__description
                margin 0 0 1.5rem 0
            
@media $mq-phone-lg
    .cover
        .cover__description
            font-size 1rem
            
    .cover-author
        .cover-author__bio
            .cover-author__description
                font-size 1rem
                
        .cover-author__footer
            .cover-author__location
            .cover-author__website
            .cover-author__facebook
            .cover-author__twitter
                
                .cover-author__icon
                    font-size 1.2rem
                    
                .cover-author__text
                    font-size 1.1rem
                    
                .cover-author__link
                    font-size 1.1rem
            
@media $mq-tablet-sm
    .cover
        .cover__title
            font-size 4rem
            
        .cover__description
            font-size 1.1rem
            line-height 1.5rem
            
        .cover__icon
            font-size 2.8rem
            
    .cover-author
        .cover-author__header
            .cover-author__title
                font-size 3rem
                
            .cover-author__post
                .cover-author__icon
                    font-size 1.2rem
                    
                .cover-author__text
                    font-size 1.1rem
                    
        .cover-author__bio
            .cover-author__description
                font-size 1.1rem
                line-height 1.5rem
            
@media $mq-desktop-xs
    .cover
        text-align center
        
        .cover__title
            font-size 5rem
            
    