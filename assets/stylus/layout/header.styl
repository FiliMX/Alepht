.header
    background-color $color-dark
    color white
    padding 1.2rem 1.5rem
    
.header__alepht
    .header__img
        width 50px
        
.header__text
    font-size 1.6rem
    margin 0
    display inline-block
    color $color-light
    
.header__text-logo--no
    padding 0 0 0.2rem 0
    border-bottom 3px solid $color-blue-A
    
.header__options
    font-size 1.8rem
    margin 0.5rem 0 0 0
    .header__icon
        color $color-light
        
        &:first-child
            margin 0 0.5rem 0 0
            
        &:nth-child(2)
            margin 0 0 0 0.5rem
    
