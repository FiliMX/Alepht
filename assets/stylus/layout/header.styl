.header
    color white
    padding 1.2rem 1.3rem
    position absolute
    width 100%
    box-sizing border-box
    z-index 5
    
.header__alepht
    display inline-block
    margin 0.2rem 0 0 0
    .header__img
        width 45px
        
.header__title
    font-size 1.6rem
    margin 0
    display inline-block
    color $color-light
    
.header__title-logo--no
    padding 0 0 0.2rem 0
    border-bottom 3px solid $color-blue-A
    
.header__title-logo--yes
    vertical-align top
    margin 0.1rem 0 0 0.4rem
    
.header__options
    margin 0.4rem 0 0 0
    
.header__list
    .header__item
        display inline-block
        
        &:nth-child(-n+4)
            display none
            
        &:nth-child(5)
            margin 0 0.5rem 0 0
        
        .header__icon
            font-size 1.4rem
            display block
            text-align center
            color $color-light
        
        .header__text
            font-weight 300
            font-size 0.7rem
            color $color-light
            

@media $mq-phone-sm

    .header__alepht
        .header__img
            width 50px
            
    .header__title
        font-size 1.8rem
        
    .header__title-logo--yes
        margin 0.3rem 0 0 0.5rem

    .header__options
        margin 0.6rem 0 0 0
        
    .header__list
        .header__item
                
            &:nth-child(5)
                margin 0 0.8rem 0 0
            
            .header__icon
                font-size 1.5rem
            
            .header__text
                font-size 0.8rem
                
@media $mq-tablet-md
    .header__options
        margin 0.4rem 0 0 0
        
    .header__list
        .header__item
        
            &:nth-child(-n+4)
                display inline-block
                vertical-align top
                margin 0.8rem 0.9rem 0 0
                
                .header__text
                    font-size 1.1rem
                
            &:nth-child(4)
                margin 0.8rem 1.5rem 0 0
            
@media $mq-desktop-xs
    .header__list
        .header__item
        
            &:nth-child(-n+4)
                margin 0.8rem 1rem 0 0
                
            &:nth-child(4)
                margin 0.8rem 2rem 0 0
            
            .header__option:hover > span
            .header__option:hover > i
                color $color-blue-A
                cursor pointer
                transition 0.3s
            
