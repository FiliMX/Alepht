.footer
    background $color-dark
    padding 1.5rem 1.5rem
    text-align center

.footer__social
    margin 0 0 1rem 0
.footer__list
    .footer__item
        display inline-block
        margin 0 0.5rem
        .footer__icon
            color $color-blue-A
            font-size 2rem
            
.footer__copyright
    color $color-light
    font-weight 300
    text-transform uppercase
    font-size 0.9rem
    
    .footer__text
        line-height 1.3rem
        
        .footer__link
            color $color-blue-A
            padding 0 0 0.1rem 0
            border-bottom 1px dotted $color-blue-A
            letter-spacing 1px
            
@media $mq-desktop-xs
    .footer 
        padding 3rem 1.5rem