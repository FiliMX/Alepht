button-style($border-color, $background, $color)
    border 1px solid $border-color
    background $background
    color $color
    
    &:active
        transform scale(0.9)
        
icon-style()
    font-family 'alepht' !important
    speak none
    font-style normal
    font-weight normal
    font-variant normal
    text-transform none
    line-height 1
    -webkit-font-smoothing: antialiased
    -moz-osx-font-smoothing: grayscale